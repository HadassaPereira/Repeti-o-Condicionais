notas = []
continuar = True

while continuar:
    nota = float(input("Digite a nota do aluno (ou digite -1 para parar): "))
    if nota == -1:
        continuar = False
    else:
        notas.append(nota)

if notas:
    media = sum(notas) / len(notas)
    print(f"A média das notas é: {media:.2f}")
else:
    print("Nenhuma nota foi inserida.")
